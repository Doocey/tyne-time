---
interface Props {
  title: string;
  description?: string;
  excerpt?: string;
  date: string;
  image?: string;
  categories?: string[];
}

const { title, description, excerpt, date, image, categories } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: title,
  description: description || excerpt || "",
  keywords: categories,
  author: {
    "@type": "Person",
    name: "Kevin Doocey",
    url: "https://twitter.com/kevindoocey"
  },

  ...(image && { image: new URL(image, Astro.url) }),
  /* the schema expects Date or DateTime using ISO 8601 format. For Date that is yyyy-MM-dd */
  datePublished: date
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
